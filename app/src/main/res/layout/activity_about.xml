<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/about_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#cfcfcf"
        android:minHeight="?attr/actionBarSize" />

    <TextView
        android:id="@+id/about_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/color_black"
        android:layout_marginTop="@dimen/app_margin_110"
        android:text="@string/app_name"
        android:textSize="@dimen/app_text_size_16" />

    <TextView
        android:id="@+id/about_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/app_margin_15"
        android:text="@string/about_version"
        android:textSize="@dimen/app_text_size_10" />

    <TextView
        android:id="@+id/about_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/app_margin_15"
        android:textColor="@color/color_black"
        android:gravity="center"
        android:paddingLeft="@dimen/app_margin_80"
        android:paddingRight="@dimen/app_margin_80"
        android:text="@string/about_text"
        android:textSize="@dimen/app_text_size_14" />

    <Button
        android:id="@+id/about_feedback"
        android:layout_width="@dimen/app_margin_240"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/app_margin_30"
        android:text="@string/about_feedback_button"
        android:textSize="@dimen/app_text_size_14" />

    <Button
        android:id="@+id/about_share"
        android:layout_width="@dimen/app_margin_240"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/app_margin_8"
        android:text="@string/about_share_button"
        android:textSize="@dimen/app_text_size_14" />
</LinearLayout>